<% include header %>
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h1 class="text-center">DOG TRACKER LOGIN</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4 col-xs-push-4">
            <%- include('errorbox') %>
            <form method="POST">
                <div class="form-group">
                    <label for="loginInputEmail">Email address</label>
                    <input type="email" class="form-control" name="loginInputEmail" id="loginInputEmail"
                           placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="loginInputPassword">Password</label>
                    <input type="password" class="form-control" name="loginInputPassword" id="loginInputPassword"
                           placeholder="Password">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-block" value="Login"/>
                </div>
            </form>

            <a href="/register" class="btn btn-primary btn-block">Register</a>
        </div>

    </div>
</div>
<% include footer %>